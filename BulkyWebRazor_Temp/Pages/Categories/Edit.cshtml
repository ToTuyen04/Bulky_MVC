@page
@model BulkyWebRazor_Temp.Pages.Categories.EditModel
@{
}

<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="row pt-4 pb-2">
        <h2>Edit Category</h2>
        <hr />
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-3 p-1">
        <label asp-for="Category.Name" class="p-0"></label>
        <input asp-for="Category.Name" class="form-control" />
        <span asp-validation-for="Category.Name" class="text-danger"></span>
    </div>
    <div class="row mb-3 p-1">
        <label asp-for="Category.DisplayOrder" class="p-0">Display Order</label>
        <input asp-for="Category.DisplayOrder" class="form-control" />
        <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-6 col-md-4">
            <button 
                type="submit" 
                class="btn btn-success border form-control" 
                asp-page="/categories/edit"
            >
                Update
            </button>
        </div>
        <div class="col-6 col-md-4">
            <a class="btn btn-outline-primary form-control" asp-page="/categories/index">
                Back to list
            </a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}