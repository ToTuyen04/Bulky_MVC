@model Category

<form method="post">
    <div class="row pt-4 pb-2">
        <h2>Delete Category</h2>
        <hr />
    </div>
    <input asp-for="Id" hidden />
    <div class="row mb-3 p-1">
        <label asp-for="Name" class="p-0"></label>
        <input asp-for="Name" class="form-control" disabled />
    </div>
    <div class="row mb-3 p-1">
        <label asp-for="DisplayOrder" class="p-0">Display Order</label>
        <input asp-for="DisplayOrder" class="form-control" disabled/>
    </div>
    <div class="row">
        <div class="col-6 col-md-4">
            <button type="submit"
                    class="btn btn-danger border form-control"
                    asp-controller="Category"
                    asp-action="Delete">
                Delete
            </button>
        </div>
        <div class="col-6 col-md-4">
            <a class="btn btn-outline-primary form-control" asp-controller="Category" asp-action="Index">
                Back to list
            </a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}