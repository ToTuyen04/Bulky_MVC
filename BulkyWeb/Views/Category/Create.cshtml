@model Category

<form method="post">
    <div class="row pt-4 pb-2">
        <h2>Create New Category</h2>
        <hr />
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-3 p-1">
        <label asp-for="Name" class="p-0"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="row mb-3 p-1">
        <label asp-for="DisplayOrder" class="p-0">Display Order</label>
        <input asp-for="DisplayOrder"class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-6 col-md-4">
            <button type="submit" class="btn btn-success border form-control" asp-controller="Category" asp-action="Create">Create</button>
        </div>
        <div class="col-6 col-md-4">
            <a class="btn btn-outline-primary form-control" asp-controller="Category" asp-action="Index">
                Back to list
            </a>
        </div>
    </div>
</form>